<header>

{% set route_locale = app.request.attributes.get("_route") %}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{path('accueil')}}">ArchHive</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a href="{{path('accueil')}}" class="nav-link
            {{ route_locale == "index" ? " active" : "" }}">
            Accueil
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="{{path('listelivres')}}" class="nav-link
            {{ route_locale == "listelivres" ? " active" : "" }}">
            Livres
          </a>
        </li>
        <li class="nav-item">
          <a href="{{path('connexion')}}" class="nav-link
            {{ route_locale == "connexion" ? " active" : "" }}">
            Se connecter
          </a>
        </li>
        <li class="nav-item">
          <a href="{{path('inscription')}}" class="nav-link
            {{ route_locale == "inscription" ? " active" : "" }}">
            S'inscrire
          </a>
        </li>
      </ul>
      <form class="d-flex">
        <input class="form-control me-sm-2" type="text" placeholder="Rechercher">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
      </form>
    </div>
  </div>
</nav>

</header>